<div class="container">
  <div class="header">
    <h2>Your orders</h2>
  </div>
  <div class="row">
    <% @orders.each do |order|%>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card">
          <div class="card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path 'cup' %>');">
          </div>
          <div class="card-description">
            <h2><%= order.status %></h2>
            <p> <%= order.sub_total%></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
