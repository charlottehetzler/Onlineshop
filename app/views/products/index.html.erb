<div class="container">

  <div class="header">
    <h2>Our Products</h2>
  </div>

  <div class="row">
    <% @products.each do |product|%>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card">
          <div class="card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path product.title %>');">
          </div>
          <div class="card-description">
            <h3><%= link_to product.title, product_path(product) %></h3>
            <p> <%= product.description %></p>
            <h4 class="price"><%= "#{product.price}â‚¬" %></h4>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
