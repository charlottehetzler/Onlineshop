<div class="container">

  <div class="header">
    <h2>Your Shopping Cart</h2>
  </div>

  <div class="shopping-cart">
    <div class="shopping-cart-overview">

      <% if @items.length > 0 %>
      <% @items.each do |item| %>
      <div class="row">
        <div class="col-lg-12 col-md-6 col-xs-4">
          <div class="shopping-cart-item">
            <div class="col-lg-8 cart-item-info">
              <p><%= item.product.title%></p>
            </div>
            <div class="col-lg-3 cart-item-price">
              <p><%= item.quantity %></p>
              <p>x  <%= item.price %> €</p>
            </div>
            <%= form_for item, method: :delete do |f| %>
              <%= f.button type:"submit", class:"col-lg-1 remove-icon", id:"remove-btn" do %>
              <i class="fas fa-times"></i>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
      <% end %>
      <h3>Total Price: <%= current_cart.sub_total %>€</h3>
      <div class="checkout">
        <%= link_to "Checkout", checkout_path, class: "checkout-button" %>
      </div>
      <div class="go-back">
        <%= link_to "Go Back", products_path, class: "go-back-button" %>
      </div>

      <% else %>
        <h4>There are currently no items in your shopping cart.</h4>
        <%= link_to "Have a look at our products here.", products_path %>
      <% end %>

    </div>
  </div>

</div>
